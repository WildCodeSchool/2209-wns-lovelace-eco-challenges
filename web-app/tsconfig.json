{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@assets/*": ["./src/src-frontend/assets/*"],
      "@data/*": ["./src/src-frontend/data/*"],
      "@gql/*": ["./src/src-frontend/gql/*"],
      "@shared/*": ["./src/src-frontend/shared/*"],
      "@src/*": ["./src/*"],
      "@styles/*": ["./src/styles/*"],
      "@utils/*": ["./src/src-frontend/utils/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
